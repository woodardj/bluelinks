{
  "name": "Reddit Blue Links",
  "version": "1.0.0.0",
  "description": "I must have... the BLUE pages.",
  "background_page": "background.html",
  
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["jquery.min.js"]
  }],
  
  "page_action" :
  {
    "default_icon" : "icon.png",
    "default_title" : "There's a 'G' in this URL!"
  },
  "permissions": [
    "tabs", "http://*/*", "history"
  ],
  "icons" : {
    "48" : "icon.png",
    "128" : "icon.png"
  },
  "content_security_policy": "script-src 'self'"
}
